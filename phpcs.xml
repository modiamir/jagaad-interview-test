<?xml version="1.0" ?>
<ruleset name="PHP_CodeSniffer">
    <description>CodeSniffer configuration file</description>

    <rule ref="PSR12"/>

    <file>./src</file>
    <file>./tests</file>

    <exclude-pattern>*/vendor/*</exclude-pattern>

    <arg name="colors" />
    <arg name="report" value="full" />
    <arg value="ps" />
</ruleset>
